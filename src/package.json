{
  "name": "InferencePortAI",
  "version": "1.4.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "node scripts/clean.js",
    "watch": "tsc --watch",
    "compile": "tsc",
    "start": "npm run clean && npm run compile && npx electron . && npm run clean",
    "build": "npm run clean && npm run compile && npm run prepack && npx electron-builder --publish never && npm run clean",
    "publish": "npm run clean && npm run compile && npm run prepack && npx electron-builder --publish always && npm run clean",
    "prepack": "node scripts/bundle-ollama.js"
  },
  "keywords": [],
  "type": "module",
  "author": "Rihaan Meher",
  "license": "Apache 2.0",
  "description": "AI, anywhere",
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "fix-path": "^5.0.0",
    "markdown-it": "^14.1.0",
    "sanitize-html": "^2.17.0",
    "systeminformation": "^5.30.5"
  },
  "devDependencies": {
    "@types/dompurify": "^3.2.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^25.0.9",
    "@types/sanitize-html": "^2.16.0",
    "@typescript/native-preview": "^7.0.0-dev.20260120.1",
    "electron": "37.3.1",
    "electron-builder": "26.2.0",
    "electron-ollama": "0.1.25",
    "glob": "^13.0.0"
  },
  "build": {
    "appId": "com.sharktide.inferenceport",
    "productName": "InferencePort AI",
    "files": [
      "public/**/*",
      "node-apis/*",
      "main.js",
      "preload.cjs",
      "package.json",
      "!**/vendor/**/*",
      "!./scripts/*",
      "LICENSE",
      "third_party_licenses"
    ],
    "extraResources": [
      {
        "from": "vendor/electron-ollama",
        "to": "vendor/electron-ollama"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "sharktide",
      "repo": "InferencePort-AI",
      "releaseType": "release"
    },
    "fileAssociations": [
      {
        "ext": "import",
        "name": "InferencePortAI Metadata File",
        "role": "Editor"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "appx",
        "zip",
        "msi",
        "nsis"
      ],
      "appId": "RihaanMeher.InferencePortAI_jgdzt0f3vt2yc",
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "perMachine": true
    },
    "appx": {
      "customManifestPath": "build/AppxManifest.xml"
    }
  }
}
