{
  "name": "InferencePortAI",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "node scripts/clean.js",
    "compile:main": "tsc -p tsconfig.main.json",
    "compile:renderer": "tsc -p tsconfig.renderer.json",
    "compile": "npm run compile:main && npm run compile:renderer",
    "start": "npm run clean && npm run compile && npx electron . && npm run clean",
    "build": "npm run clean && npm run compile && npx electron-builder && npm run clean"
  },
  "keywords": [],
  "author": "Rihaan Meher",
  "license": "ISC",
  "description": "AI, anywhere",
  "dependencies": {
    "marked": "^16.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "electron-builder": "^26.0.12",
    "electron": "^37.3.1",
    "glob": "^11.0.3"
  },
  "build": {
    "appId": "com.sharktide.inferenceport",
    "productName": "InferencePortAI",
    "fileAssociations": [
      {
        "ext": "import",
        "name": "InferencePortAI Metadata File",
        "role": "Editor"

      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "msi",
        "appx",
        "zip"
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "perMachine": true
    }
  }
}
